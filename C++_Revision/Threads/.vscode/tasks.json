{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "My latest gcc 11.1",
			"command": "/bin/g++-11",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++20",
				"${fileDirname}/*.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe",
				"-pthread"
				
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /bin/g++-11"
		}
	]
}